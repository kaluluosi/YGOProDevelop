<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:panel="clr-namespace:YGOProDevelop.PanelTempalte"
        xmlns:avalon="http://schemas.xceed.com/wpf/xaml/avalondock"
        xmlns:ignore="http://www.ignore.com"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" xmlns:local="clr-namespace:YGOProDevelop" x:Name="window" x:Class="YGOProDevelop.MainWindow"
        mc:Ignorable="d ignore"
        Height="757"
        Width="1173.5"
        Title="YGOProDevelop" WindowStartupLocation="CenterScreen"
        DataContext="{Binding Source={StaticResource Locator},Path=Main}" Icon="/YGOProDevelop;component/Resources/属性/暗.png" 
    >
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveCmd}"></KeyBinding>
    </Window.InputBindings>
    <Window.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="DocumentHeaderTemplate">
                <TextBlock Text="{Binding Content.Title}" TextTrimming="CharacterEllipsis"/>
            </DataTemplate>
            <DataTemplate x:Key="DocumentTitleTemplate">
                <TextBlock Text="{Binding Content.Title}" TextTrimming="CharacterEllipsis"/>
            </DataTemplate>
            <DataTemplate x:Key="DocumentContentMenuTemplate">
                <TextBlock Text="{Binding Content.Title}" TextTrimming="CharacterEllipsis"/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Menu Grid.Row="0" >
            <MenuItem Header="文件" Background="{x:Null}">
                <MenuItem Header="新建" Command="{Binding NewCmd}"></MenuItem>
                <MenuItem Header="打开" Command="{Binding OpenCmd}"></MenuItem>
                <MenuItem Header="保存" Command="{Binding SaveCmd}"></MenuItem>
            </MenuItem>
            <MenuItem Header="视图" >
                <MenuItem Header="显示行号" IsCheckable="True"  IsChecked="{Binding IsShowLineNumbers}" />
            </MenuItem>
            
            <MenuItem Header="语言" ItemsSource="{Binding HightLightingDefs}" >
                <MenuItem.ItemContainerStyle>
                    <Style TargetType="MenuItem">
                        <Setter Property="Command" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type MenuItem}}, Path=DataContext.SetLanguageCmd }"></Setter>
                        <Setter Property="CommandParameter" Value="{Binding .}"></Setter>
                    </Style>
                </MenuItem.ItemContainerStyle>
            </MenuItem>
            
            <MenuItem x:Name="themesMenu" Header="主题" Click="themesMenu_Click" >
                <MenuItem Header="VS2010"></MenuItem>
                <MenuItem Header="ExpressDark"></MenuItem>
                <MenuItem Header="ExpressLight"></MenuItem>
                <MenuItem Header="Aero"></MenuItem>
                <MenuItem Header="Metro"></MenuItem>
                <MenuItem Header="Generic"></MenuItem>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" >
            <ToolBarTray>
                <ToolBar>
                    <Button Command="{Binding NewCmd}">
                        <Image Source="/YGOProDevelop;component/Resources/Icon/File_New32.png" Height="34" Width="32"/>
                    </Button>
                    <Button Command="{Binding OpenCDBEditor, Mode=OneWay}" ToolTip="CDBEditor">
                        <Image Source="/YGOProDevelop;component/Resources/类型/cardFrame_0.png"  Height="34" Width="32" ></Image>
                    </Button>
                </ToolBar>
            </ToolBarTray>
        </Grid>

        <avalon:DockingManager x:Name="dock" Grid.Row="2" 
			DocumentsSource="{Binding DocumentViewModels}" 
			AnchorablesSource="{Binding AnchorableViewModels}"  
			ActiveContent="{Binding ActiveViewModel,Mode=TwoWay}" DocumentHeaderTemplate="{DynamicResource DocumentHeaderTemplate}" DocumentTitleTemplate="{DynamicResource DocumentTitleTemplate}" DocumentPaneMenuItemHeaderTemplate="{DynamicResource DocumentContentMenuTemplate}"  >
            <avalon:DockingManager.LayoutItemTemplateSelector>
                <panel:PanelTemplateSelector/>
            </avalon:DockingManager.LayoutItemTemplateSelector>
            <avalon:LayoutRoot/>
        </avalon:DockingManager>

    </Grid>
</Window>
