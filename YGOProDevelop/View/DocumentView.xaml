<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalon="http://schemas.xceed.com/wpf/xaml/avalondock"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock" x:Class="YGOProDevelop.View.DocumentView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
            
    >
    
    <Grid>
        <avalonedit:TextEditor Document="{Binding Document}" ShowLineNumbers="{Binding IsShowLineNumbers}" SyntaxHighlighting="{Binding Language}" FontSize="16" />
    </Grid>
</UserControl>
